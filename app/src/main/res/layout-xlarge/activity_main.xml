<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="seedcommando.com.yashaswi.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:srcCompat="@drawable/yashaswi"
                android:gravity="center"
                android:id="@+id/imageView" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="25dp">



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_floatusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white_color"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">


                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:id="@+id/editText_username"
                    android:textSize="26sp"
                    android:padding="25dp"
                    android:drawableLeft="@drawable/icon_user"
                    android:drawablePadding="15dp"
                    android:fontFamily="@string/fontFamily__roboto_light"
                    />
            </android.support.design.widget.TextInputLayout>
            <!--  <EditText
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textNoSuggestions"
                  android:hint="username@emsphere.com"
                  android:textColorHint="@color/white_color"
                  android:fontFamily="@string/fontFamily__roboto_light"
                  android:textColor="@color/white_color"
                 android:drawableLeft="@drawable/icon_user"
                  android:paddingBottom="16dp"
                  android:drawablePadding="25dp"
                  android:backgroundTint="#ffffff"
                  android:textSize="36sp"
                  android:id="@+id/editText_username"
                 android:textCursorDrawable="@drawable/color_cursor"
                  android:padding="30dp"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp">



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_floatpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white_color"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">


                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="26sp"
                    android:id="@+id/editText_password"
                    android:padding="25dp"
                    android:drawableLeft="@drawable/icon_user"
                    android:drawablePadding="15dp"
                    android:fontFamily="@string/fontFamily__roboto_light"
                    />
            </android.support.design.widget.TextInputLayout>
            <!-- <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="textPassword"
                 android:ems="10"
                 android:hint="password"
                 android:textSize="36sp"
                 android:backgroundTint="#ffffff"
                 android:textColorHint="@color/white_color"
                 android:fontFamily="@string/fontFamily__roboto_light"
                 android:textColor="@color/white_color"
                 android:drawableLeft="@drawable/icon_password"
                 android:id="@+id/editText_password"
                 android:drawablePadding="25dp"
                 android:paddingBottom="16dp"
                 android:layout_weight="1"
                 android:textCursorDrawable="@drawable/color_cursor"
                 android:padding="30dp"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp">

            <CheckBox
                android:text="REMEMBER ME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white_color"
                android:textColor="@color/white_color"
                android:fontFamily="@string/fontFamily__roboto_light"
                android:theme="@style/WhiteCheck"
                android:id="@+id/checkBox_remember_me"
                android:padding="20dp"
                android:textSize="28sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <Button
                android:text="LOGIN"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button_login"
                android:fontFamily="@string/fontFamily__roboto_condensed"
                android:textColor="@color/white_color"
                android:onClick="onLogin"
                android:textSize="30sp"
                android:background="@drawable/roundbutton"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Copyright Â© 2021. emSphere Technologies Pvt. Ltd. All rights reserved"
                android:layout_marginTop="250dp"
                android:textSize="30dp"
                android:layout_marginRight="20dp"
                android:textColor="#FFFFFF"
                android:gravity="left"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
