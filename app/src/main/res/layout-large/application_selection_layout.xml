<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#4d516a">

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date"
            android:textColor="@color/white_color"
            android:fontFamily="@string/fontFamily__roboto_light"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radiogroup"
            android:orientation="vertical">
            <!--<RadioButton
                android:text="Leave Application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_NORMAL"
                app:buttonTint="@color/radio_button_color"
                android:id="@+id/radioButton_leave" />
            <RadioButton
                android:text="Attendance Regularization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_NORMAL"
                app:buttonTint="@color/radio_button_color"
                android:id="@+id/radioButton_regulization" />
            <RadioButton
                android:text="Out duty Application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_NORMAL"
                app:buttonTint="@color/radio_button_color"
                android:id="@+id/radioButton_out_duty" />
            <RadioButton
                android:text="Comp-off Application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_NORMAL"
                app:buttonTint="@color/radio_button_color"
                android:id="@+id/radioButton_comp_off" />
            <RadioButton
                android:text="WFH Application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_NORMAL"
                app:buttonTint="@color/radio_button_color"
                android:id="@+id/radioButton_wfh_application" />-->
        </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"

        android:layout_margin="0dp">

        <Button
            android:text="APPLY"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight=".50"
            android:layout_margin="8dp"

            android:textColor="@color/white_color"
            android:fontFamily="@string/fontFamily__roboto_light"
            android:textStyle="bold"
            android:background="@drawable/roundbutton"
            android:id="@+id/button_apply" />

        <Button
            android:text="CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight=".50"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:fontFamily="@string/fontFamily__roboto_light"
            android:background="@drawable/roundbutton"
            android:id="@+id/button_cancel" />

    </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
