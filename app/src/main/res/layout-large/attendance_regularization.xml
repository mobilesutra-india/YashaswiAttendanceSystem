                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_margin="8dp">




                    <!--    floating labels  out_date edit text.....-->

                    <android.support.design.widget.TextInputLayout
