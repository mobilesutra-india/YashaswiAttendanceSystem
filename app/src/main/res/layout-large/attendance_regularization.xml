                        style="@style/My.Spinner.Style" >
                    </Spinner>


                </LinearLayout>


                <!--  ..........................-->

                <!--  for remark field....-->





                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_floa_remark"
                    android:layout_width="match_parent"
