<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="seedcommando.com.yashaswi.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/yashaswi"
                    android:gravity="center"
                    android:id="@+id/imageView" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"

                android:focusable="true"
                android:focusableInTouchMode="true">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_floatEmpID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColorHint="@color/white_color"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    >


                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Employee Code"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/white_color"
                        android:textColorHint="@color/floatloginlabels"
                        android:id="@+id/editText_Empid"
                        android:padding="14dp"
                        android:textSize="@dimen/text_size_NORMAL"

                        android:drawablePadding="10dp"
                        android:fontFamily="@string/fontFamily__roboto_light"
                        android:paddingTop="4dp"
                        android:nextFocusUp="@id/editText_username"
                        android:nextFocusLeft="@id/editText_username"

                        android:layout_marginTop="4dp"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                >



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_floatphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white_color"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    >


                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:textColor="@color/white_color"
                        android:textColorHint="@color/floatloginlabels"
                        android:id="@+id/editText_phone"
                        android:maxLength="12"
                        android:drawablePadding="10dp"
                        android:textSize="@dimen/text_size_NORMAL"
                        android:padding="14dp"
                        android:fontFamily="@string/fontFamily__roboto_light"
                        android:paddingTop="4dp"
                        android:nextFocusUp="@id/editText_password"
                        android:nextFocusLeft="@id/editText_password"
                        android:layout_marginTop="4dp"/>
                </android.support.design.widget.TextInputLayout>


                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_floatpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="password"
                    android:backgroundTint="#ffffff"
                    android:textColorHint="@color/white_color"
                    android:fontFamily="@string/fontFamily__roboto_light"
                    android:textColor="@color/white_color"
                    android:drawableLeft="@drawable/icon_password"
                    android:id="@+id/editText_password"
                    android:drawablePadding="10dp"
                    android:paddingBottom="16dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@drawable/color_cursor"/>
        </android.support.design.widget.TextInputLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                >



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_floatCopanyID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white_color"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    >


                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Code"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/white_color"
                        android:textColorHint="@color/floatloginlabels"
                        android:id="@+id/editText_CompanyID"

                        android:drawablePadding="10dp"
                        android:padding="14dp"
                        android:fontFamily="@string/fontFamily__roboto_light"
                        android:paddingTop="4dp"
                        android:textSize="@dimen/text_size_NORMAL"
                        android:nextFocusUp="@id/editText_password"
                        android:nextFocusLeft="@id/editText_password"
                        android:layout_marginTop="4dp"/>
                </android.support.design.widget.TextInputLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >



               <!-- <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_floatspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white_color"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                    >-->


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/editText_spinner"
                         android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:popupBackground="#E6414768"
                        android:fontFamily="@string/fontFamily__roboto_light"
                        android:paddingTop="4dp"
                        android:textSize="@dimen/text_size_NORMAL"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:nextFocusUp="@id/editText_password"
                        android:nextFocusLeft="@id/editText_password"
                        android:layout_marginTop="4dp"/>
                <!--</android.support.design.widget.TextInputLayout>-->



            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:text="SUBMIT"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/button_submit"
                    android:fontFamily="@string/fontFamily__roboto_condensed"
                    android:textColor="@color/white_color"
                    android:onClick="onLogin"
                    android:textSize="22sp"
                    android:background="@drawable/roundbutton"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
