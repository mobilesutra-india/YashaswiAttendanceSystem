<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradiant">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar" />

       <!-- android:id="@+id/toolbar_att_details"-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="10dp"
        android:orientation="vertical"
       >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="4dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="12dp"
          android:paddingBottom="12dp"
          android:paddingLeft="30dp"
          android:paddingRight="30dp"
         >

          <!-- prev button -->
          <ImageView
              android:id="@+id/calendar_prev_button"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:src="@drawable/ic_action_left"/>

          <!-- date title -->
          <TextView
              android:id="@+id/calendar_date_display"
              android:layout_width="20dp"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/calendar_prev_button"
              android:layout_toLeftOf="@+id/calendar_next_button"
              android:gravity="center"
              android:textSize="@dimen/text_size_LARGE"
              android:textAppearance="@android:style/TextAppearance.Medium"
              android:textColor="@color/white_color"
              android:fontFamily="@string/fontFamily__roboto_light"
              android:text="current date"
              android:textStyle="bold"/>

          <!-- next button -->
          <ImageView
              android:id="@+id/calendar_next_button"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:src="@drawable/ic_action_right"/>
      </RelativeLayout>
     <!-- <TextView
          android:text="Reports"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/white_color"
          android:textSize="@dimen/text_size_LARGE"
          android:fontFamily="@string/fontFamily__roboto_light"
          android:id="@+id/textView9" />-->

  </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/white_color"
            android:textStyle="bold"
            android:id="@+id/Select_Subordinates"
            android:text="Select Subordinates">

        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_color">

            <Spinner
                android:id="@+id/spName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:spinnerMode="dropdown"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/manager_working_header"
            android:weightSum="100"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="8dp">


            <TextView
                android:text="Date"
                android:layout_width="0dp"
                android:textColor="@color/white_color"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_LARGE"
                android:layout_marginLeft="20dp"
                android:layout_weight="30"
                android:id="@+id/textView_week" />

            <TextView
                android:text="In"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_LARGE"
                android:layout_weight="17"
                android:id="@+id/textView_working_hrs" />

            <TextView
                android:text="Out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_LARGE"
                android:layout_weight="17"
                android:id="@+id/textView_actual_hrs" />

            <TextView
                android:text="Man hrs."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_LARGE"
                android:layout_weight="20"
                android:id="@+id/textView_extra_hrs" />

            <TextView
                android:text="Status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_LARGE"
                android:layout_weight="16"
                android:id="@+id/textView_status_attendance" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#b5b5b5"
                android:dividerHeight="1dp"
                android:background="@color/white_color"

                />
        </LinearLayout>




    </LinearLayout>




</LinearLayout>
