<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textSize="@dimen/text_size_16"
        android:text="Document"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"

        android:weightSum="2"

        >

   <!-- <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose file"
        android:onClick="OnBrowse"/>-->
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
        android:text="Choose file!"
            android:layout_weight="1.3"
        android:id="@+id/filename"
        />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/attachment"
            android:layout_gravity="end"
            android:layout_weight=".7"
            android:onClick="OnDialog"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_floatto_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textColorHint="@color/text_color_hint">


        <EditText
            android:id="@+id/editText_to_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/fontFamily__roboto_light"
            android:hint="Document Name"
            android:drawablePadding="6dp"

            android:textColor="@color/text_color_hint"
            android:textSize="@dimen/Text_size_normal_device_leavetype" />
    </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>







